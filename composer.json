{
    "name": "atwx/standard-silverstripe-template",
    "type": "silverstripe-recipe",
    "description": "A default Silverstripe installation",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:atwx/silverstripe-vitehelper.git"
        }
    ],
    "require": {
        "php": "^8.1",
        "silverstripe/recipe-plugin": "^2",
        "silverstripe/recipe-cms": "^5.1",
        "dnadesign/silverstripe-elemental": "^5",
        "atwx/silverstripe-vitehelper": "dev-main",
        "ext-json": "*"
    },
    "require-dev": {
        "silverleague/ideannotator": "^3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/icons",
            "app/client/images"
        ],
        "resources-dir": "_resources",
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
